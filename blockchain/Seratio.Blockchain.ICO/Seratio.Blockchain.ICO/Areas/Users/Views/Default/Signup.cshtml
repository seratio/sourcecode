@model User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Seratio Platform</title>
    <link rel="shortcut icon" href="/areas/users/assets/images/favicon.png">
    <link href="/areas/users/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/css/core.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/css/components.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/css/responsive.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/plugins/bootstrap-toastr/toastr.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">

    <script src="/areas/users/assets/js/modernizr.min.js"></script>
</head>
<body class="sign-up">
    <div class="account-pages"></div>
    <div class="clearfix"></div>
    <div class="wrapper-page" style="width: 700px;">
        <div class="card-box">
            <div class="panel-heading text-center">
                <img src="~/areas/users/assets/images/logo.png" alt="Seratio Platform" style="width: 260px;" />

                @{
                    string _message = "Sign Up for the";
                    if (!string.IsNullOrEmpty(Request.QueryString["type"]))
                    {
                        if (Request.QueryString["type"].ToLower() == "womens coin")
                        {
                            <img src="~/areas/users/assets/images/womenscoinlogov2.png" style="width: 130px;" />
                        }
                        else if (Request.QueryString["type"].ToLower() == "student coin")
                        {
                            <img src="~/areas/users/assets/images/studentcoin.png" style="width: 130px;" />
                        }
                        else if (Request.QueryString["type"].ToLower() == "growth token")
                        {
                            _message += " Growth Token on the";
                            <img src="~/areas/users/assets/images/10xaccountlogo.png" style="width: 350px;" />
                        }
                    }
                }

                <h4 class="text-center"> @_message <strong class="text-custom" style="color: #0168ab;">Seratio Platform</strong></h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <form method="post" class="form-horizontal" action="" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label>Title</label>
                                <select name="Title" class="form-control">
                                    <option value="">(None)</option>
                                    <option value="Mr">Mr</option>
                                    <option value="Mrs">Mrs</option>
                                    <option value="Miss">Miss</option>
                                    <option value="Ms">Ms</option>
                                    <option value="Dr">Dr</option>
                                    <option value="Prof">Prof</option>
                                    <option value="Rev">Rev</option>
                                </select>
                            </div>
                            <div class="col-sm-6">
                                <label>First Name</label>
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @placeholder = "First Name", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label>Last Name</label>
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @placeholder = "Last Name", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                <label>Gender</label>
                                <select name="Gender" class="col-xs-12 form-control">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label>Position</label>
                                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @placeholder = "Position", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                <label>Organization</label>
                                @Html.EditorFor(model => model.Organization, new { htmlAttributes = new { @placeholder = "Organization", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Organization, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <span style="display: inline-block; font-weight: 700; margin-bottom: 5px; max-width: 100%;">E-Mail<span class="text-danger">&nbsp;*</span></span>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "E-Mail", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                <label>Password<span class="text-danger">&nbsp;</span></label>
                                <input name="Password" type="password" placeholder="Password" class="form-control" data-val="true" data-val-required="Please enter a value for Password." required="required">
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label>Confirm Password<span class="text-danger">&nbsp;*</span></label>
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @placeholder = "Confirm Password", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                <label>Phone Number</label>
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @placeholder = "Phone Number", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label>Where did you hear about us?</label>
                                @Html.TextBoxFor(model => model.ReferralSource, new { @placeholder = "Where did you hear about us?", @class = "form-control", @maxlength = "75" })
                            </div>
                        </div>

                        <div class="form-group text-center m-t-20">
                            <div class="col-sm-12">
                                <a href="~/users/default/signup/?type=@Request.QueryString["type"]" class="btn btn-default text-uppercase waves-effect waves-light" style="background: #0168ab; color: #fff; font-weight: bold;" type="submit">Reset</a>
                                <button class="btn text-uppercase waves-effect waves-light" style="background: #0168ab; color: #fff; font-weight: bold;" type="submit">Register</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 text-center">
                <p>Already a User? <a href="/users/default/index/?type=@Request.QueryString["type"]" class="text-primary m-l-5" style="color: #0168ab;"><b>Sign In</b></a></p>
            </div>
        </div>
    </div>

    <script>
        var resizefunc = [];
    </script>
    <!-- jQuery  -->


    <script type="text/javascript" src="/areas/users/assets/js/jquery.min.js"></script>
    <script type="text/javascript" src="/areas/users/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/areas/users/assets/js/moment.min.js"></script>
    <script type="text/javascript" src="~/areas/users/assets/js/select2.js"></script>
    <script type="text/javascript" src="/areas/users/assets/plugins/pickers/pickadate/picker.js"></script>
    <script type="text/javascript" src="/areas/users/assets/plugins/pickers/pickadate/picker.date.js"></script>
    <script type="text/javascript" src="/areas/users/assets/plugins/forms/styling/uniform.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
    <script src="~/areas/users/assets/js/app.js" type="text/javascript"></script>
    <script src="~/areas/users/assets/js/jquery.livequery.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/additional-methods.min.js"></script>
    <script src="~/areas/users/assets/plugins/bootstrap-toastr/toastr.min.js" type="text/javascript"></script>
    <script src="/areas/users/assets/plugins/bootstrap-daterangepicker/daterangepicker.js" type="text/javascript"></script>
    <script src="~/areas/users/assets/plugins/pickers/datepicker.js" type="text/javascript"></script>
    <script src="/areas/users/assets/js/jquery.cookie.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="/areas/users/assets/js/scripts.js"></script>
    <script src="~/Scripts/app.js?_=@DateTime.Now.Ticks" type="text/javascript"></script>
    <script type="text/javascript" src="https://cdn.rawgit.com/bassjobsen/Bootstrap-3-Typeahead/master/bootstrap3-typeahead.min.js"></script>
    <script>
        $(document).ready(function () {
            App.init();
            @{
                if (TempData["Notification"] != null)
                {
                    Notification notification = (Notification)TempData["Notification"];
                    <text>WebApp.Notifications.Show('@notification.Type', '@notification.Text');</text>
                }
             }
        });
    </script>
</body>
</html>