@model User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - Seratio Platform</title>
    <link rel="shortcut icon" href="/areas/users/assets/images/favicon.png">
    <link href="/areas/users/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/css/core.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/css/components.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/css/responsive.css" rel="stylesheet" type="text/css" />
    <link href="/areas/users/assets/plugins/bootstrap-toastr/toastr.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <script src="/areas/users/assets/js/modernizr.min.js"></script>
</head>
<body>
    <div class="account-pages"></div>
    <div class="clearfix"></div>
    <div class="wrapper-page">
        <div class="card-box">
            <div class="panel-heading text-center">
                <img src="~/areas/users/assets/images/logo.png" alt="Seratio Platform">
                <h4 class="text-center"> Reset Password <strong class="text-custom" style="color: #0168ab;">Seratio Platform</strong></h4>
            </div>
            <div class="panel-body">
                <form method="post" class="form-horizontal m-t-20" action="" enctype="multipart/form-data">
                    <input type="hidden" value="@Request.QueryString["email"]" name="Email" />
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input name="Password" type="password" placeholder="Please enter the Password" class="form-control" data-val="true" data-val-required="Please enter a value for Password." required="required">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @placeholder = "Please enter the Confirm Password", @class = "form-control" } })
                            @Html.ValidationMessage("ConfirmPassword", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-block text-uppercase waves-effect waves-light" style="background: #0168ab; color: #fff; font-weight: bold;" type="submit">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        var resizefunc = [];
    </script>
    <!-- jQuery  -->


    <script src="~/areas/users/assets/js/jquery.min.js"></script>
    <script src="~/areas/users/assets/js/bootstrap.min.js"></script>
    <script src="~/areas/users/assets/js/detect.js"></script>
    <script src="~/areas/users/assets/js/fastclick.js"></script>
    <script src="~/areas/users/assets/js/jquery.slimscroll.js"></script>
    <script src="~/areas/users/assets/js/jquery.blockUI.js"></script>
    <script src="~/areas/users/assets/js/waves.js"></script>
    <script src="~/areas/users/assets/js/wow.min.js"></script>
    <script src="~/areas/users/assets/js/jquery.nicescroll.js"></script>
    <script src="~/areas/users/assets/js/jquery.scrollTo.min.js"></script>

    <script src="~/areas/users/assets/js/jquery.core.js"></script>
    <script src="~/areas/users/assets/js/jquery.app.js"></script>
    <script type="text/javascript" src="/areas/users/assets/plugins/pickers/pickadate/picker.js"></script>
    <script type="text/javascript" src="/areas/users/assets/plugins/pickers/pickadate/picker.date.js"></script>
    <script src="/areas/users/assets/plugins/bootstrap-toastr/toastr.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="/areas/users/assets/js/jquery.livequery.js" type="text/javascript"></script>
    <script src="~/Scripts/app.js?_=@DateTime.Now.Ticks" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            @{
                if (TempData["Notification"] != null)
                {
                    Notification notification = (Notification)TempData["Notification"];
                    <text>WebApp.Notifications.Show('@notification.Type', '@notification.Text');</text>
                }
             }
        });
    </script>
</body>
</html>