@model Wallet
@{
    ViewBag.Title = "Download Wallet Files";
    Layout = "~/Areas/Users//Views/Shared/_Layout.cshtml";
}

@section JavaScript{
    <script type="text/javascript">$(document).ready(function () { WebApp.Core.HighlightCurrentMenuItem('Investments') });</script>
    @*  <script src="~/Areas/Users/Assets/js/jquery.wizard.js"></script>*@
    @*  <script src="~/Areas/Users/Assets/js/remodal.min.js" type="text/javascript"></script>*@
}

@section CSS{
    @*  <link href="~/Areas/Users/Assets/css/survey.css" rel="stylesheet" />*@
}

@section Breadcrumbs{
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/users/default/dashboard"><i class="icon-home4 position-left"></i>Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/users/investments"><i class="icon-home4 position-left"></i>Investments</a></li>
        <li class="breadcrumb-item active">Download Wallet Files</li>
    </ul>
}


<div class="content-box">
    <div class="row">
        <div class="col-lg-12">
            <div class="element-wrapper">
                <div class="element-box">
                    <form method="post" class="form-horizontal" action="" enctype="multipart/form-data">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.AntiForgeryToken()
                        <h5 class="element-header">Download Wallet Files</h5>
                        <div class="form-group">
                            <a class="btn btn-link btn-float has-text" href="/Uploads/@Model.WalletFile"><i class="icon-mail-read text-primary"></i><span>Download Json File</span></a>

                        </div>
                        <div class="form-group">
                            <a class="btn btn-link btn-float has-text" href="/Uploads/@Model.WalletHTMLFile"><i class="icon-mail-read text-primary"></i><span>Download HTML File</span></a>
                        </div>
                        <div class="form-group">
                            <a class="btn btn-link btn-float has-text" href="/Uploads/@Model.WalletImageFile"><i class="icon-mail-read text-primary"></i><span>Download Image File</span></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>          