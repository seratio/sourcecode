@model Investment

@{
    ViewBag.Title = "Investment Confirmation";
    Layout = "~/Areas/L0C5A3E8915871B710C2CC98073748424/Views/Shared/_Layout.cshtml";

}

@section JavaScript{
    <script type="text/javascript">$(document).ready(function () { WebApp.Core.HighlightCurrentMenuItem('Investments') });</script>
}


<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><span class="text-semibold">Investment Confirmation</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a class="btn btn-link btn-float has-text" href="/L0C5A3E8915871B710C2CC98073748424/investments"><i class="icon-bag"></i><span>All Investments</span></a>
            </div>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/L0C5A3E8915871B710C2CC98073748424/default/dashboard"><i class="icon-home4 position-left"></i>Dashboard</a></li>
            <li><a href="/L0C5A3E8915871B710C2CC98073748424/investments"> Investments</a></li>
            <li class="active">Confirm Investment</li>
        </ul>
    </div>
</div>
<div class="content">
    <form method="post" class="form-horizontal" action="" enctype="multipart/form-data" autocomplete="off">
        <div class="panel panel-flat">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <input type="hidden" name="ID" value="@Model.ID"/>
                            <label class="col-lg-3 control-label">@Html.DisplayNameFor(model => model.ReceivedAmount):</label>
                            <div class="col-lg-7">
                                @Html.EditorFor(model => model.ReceivedAmount, new {htmlAttributes = new {@placeholder = "Please enter the Received Amount",data_val="true",data_val_required="Please enter a value of Received Amount", @class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.ReceivedAmount, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-lg-3 control-label">@Html.DisplayNameFor(model => model.ExchangeRate):</label>
                            <div class="col-lg-7">
                                @Html.EditorFor(model => model.ExchangeRate, new {htmlAttributes = new {@placeholder = "Please enter the Exchnage Rate",data_val="true",data_val_required="Please enter a value of Exchange Rate", @class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.ExchangeRate, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <label class="col-lg-3 control-label">@Html.DisplayNameFor(model => model.TokenAmount):</label>
                            <div class="col-lg-7">
                                @Html.EditorFor(model => model.TokenAmount, new { htmlAttributes = new { @placeholder = "Please enter the Token Amount or Microshare numbers", data_val = "true", data_val_required = "Please enter a value of Token Amount or Microshare numbers", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TokenAmount, "", new { @class = "text-danger" }) 
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">@Html.DisplayNameFor(model => model.Comments):</label>
                            <div class="col-lg-7">
                                @Html.TextAreaFor(model => model.Comments,  new { @placeholder = "Please enter the Comment", @class = "form-control"  })
                                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    
                    </div>
                </div>
                <hr>
                <div class="text-right">
                    <a href="/L0C5A3E8915871B710C2CC98073748424/investments/confirm/@Model.ID" class="btn btn-default">Reset<i class="icon-reload-alt position-right"></i> </a>
                    <button type="submit" class="btn btn-primary">Confirm <i class="icon-arrow-right14 position-right"></i></button>
                </div>
            </div>
        </div>
    </form>
</div>