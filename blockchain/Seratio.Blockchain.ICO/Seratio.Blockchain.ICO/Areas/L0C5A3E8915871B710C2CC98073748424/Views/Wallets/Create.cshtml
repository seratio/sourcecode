@model Seratio.Platform.ICO.Models.Wallet

@{
    ViewBag.Title = "Create Wallet";
    Layout = "~/Areas/L0C5A3E8915871B710C2CC98073748424/Views/Shared/_Layout.cshtml";

}

@section JavaScript{
    <script type="text/javascript">$(document).ready(function () { WebApp.Core.HighlightCurrentMenuItem('Wallets') });</script>
}

<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><span class="text-semibold">Create Wallet</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a class="btn btn-link btn-float has-text" href="/L0C5A3E8915871B710C2CC98073748424/wallets"><i class="icon-bag"></i><span>All Wallets</span></a>
            </div>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/L0C5A3E8915871B710C2CC98073748424/default/dashboard"><i class="icon-home4 position-left"></i>Dashboard</a></li>
            <li><a href="/L0C5A3E8915871B710C2CC98073748424/wallets"> Wallets</a></li>
            <li class="active">Create  Wallet</li>
        </ul>
    </div>
</div>
<div class="content">
    <form method="post" class="form-horizontal" action="" enctype="multipart/form-data" autocomplete="off">
        <div class="panel panel-flat">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model=>model.UserID, new { @placeholder = "Please enter the UserID", @class = "form-control" ,@Value= @ViewBag.ID })
                        
                        <div class="form-group">
                            <label class="col-lg-3 control-label"><span class="text-danger"></span>@Html.DisplayNameFor(model => model.WalletFile):</label>
                            <div class="col-lg-7">
                                <input type="file" class="file-styled" name="json" data-val="true" data-val-required="Please Select an Wallet File." accept="application/json">
                                @Html.ValidationMessage("json", "", new { @class = "text-danger" })
                         
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-lg-3 control-label"><span class="text-danger"></span>@Html.DisplayNameFor(model => model.WalletHTMLFile):</label>
                            <div class="col-lg-7">
                                <input type="file" class="file-styled" name="html" data-val="true" data-val-required="Please Select an Wallet Html File." @*accept="text/html"*@>
                                @Html.ValidationMessage("html", "", new { @class = "text-danger" })
                        
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <label class="col-lg-3 control-label"><span class="text-danger"></span>@Html.DisplayNameFor(model => model.WalletImageFile):</label>
                            <div class="col-lg-7">
                                <input type="file" class="file-styled" name="image" data-val="true" data-val-required="Please Select an Wallet Image File." accept="image/png">
                                @Html.ValidationMessage("image", "", new { @class = "text-danger" })
                         
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-lg-3 control-label">@Html.DisplayNameFor(model => model.Address):</label>
                            <div class="col-lg-7">
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @placeholder = "Please enter the Address", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                      
                    </div>
                </div>
                <hr>
                <div class="text-right">
                    <a href="/L0C5A3E8915871B710C2CC98073748424/wallets/create/@ViewBag.ID" class="btn btn-default">Reset<i class="icon-reload-alt position-right"></i> </a>
                    <button type="submit" class="btn btn-primary">Submit <i class="icon-arrow-right14 position-right"></i></button>
                </div>
            </div>
        </div>
    </form>
</div>