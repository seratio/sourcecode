@model SocialActivity

@{
    ViewBag.Title = "Social Activity Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section JavaScript{
    <script type="text/javascript">$(document).ready(function () { WebApp.Core.HighlightCurrentMenuItem('Social Activity Requests') });</script>
}

@{
    string _daterange = Request.QueryString["daterange"];
    {
        if (_daterange == null)
        {
            _daterange = (!string.IsNullOrEmpty(Request.QueryString["start"]) ? Request.QueryString["start"] + " - " : "") + (!string.IsNullOrEmpty(Request.QueryString["end"]) ? Request.QueryString["end"] : "");
        }
    }
}

@section Breadcrumbs{
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/wallet/default/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><span>Social Activity Requests</span></li>
    </ul>
}

<div class="content-box">
    <div class="row">
        <div class="col-lg-12">
            <div class="element-wrapper">
                <div class="element-box">
                    <h5 class="element-header">Social Activity Requests</h5>
                    <div class="heading-elements">
                  
                    </div>
                    <div class="table-responsive">
                        <table class="table data-table table-hover" data-source="/wallet/admin/socialactivities/list?daterange=@Request.QueryString["daterange"]" data-key="7">
                            <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    Rewarding Body
                                </th>
                                  
                                <th>
                                    @Html.DisplayNameFor(model => model.RewardAmount)
                                </th>
                                  
                                <th>
                                    Status
                                </th>
                                <th>
                                    Processed By
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LastUpdatedOn)
                                </th>
                                <th class="no-sort">Options</th>
                            </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
