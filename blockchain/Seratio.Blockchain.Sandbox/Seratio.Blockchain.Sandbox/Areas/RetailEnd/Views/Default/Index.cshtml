@using Seratio.Blockchain.Sandbox.Models
@model Seratio.Blockchain.Sandbox.Models.AcceptedRetailPolicy

@{
    ViewBag.Title = "Request Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section JavaScript{
    <script type="text/javascript">$(document).ready(function () { WebApp.Core.HighlightCurrentMenuItem('Request Payment') });</script>
    <script src="/wallet/scripts/html5-qrcode.min.js" type="text/javascript"></script>
}

@section Breadcrumbs{
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/wallet/default/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><span>Retail End</span></li>
        <li class="breadcrumb-item"><span>Request Payment</span></li>
    </ul>
}

<div class="content-box">
    <div class="row">
        <div class="col-lg-12">
            <div class="element-wrapper">
                <div class="element-box">
                    <form class="form-horizontal" action="" enctype="multipart/form-data" method="post" autocomplete="off">
                        <h5 class="element-header">Request Payment</h5>

                        <div class="heading-elements">

                        </div>
                        <div class="form-group">
                            <div class="row" style="margin-top: 20px;">

                                <label class="col-lg-3 control-label">Policy</label>
                                <div class="col-lg-8">
                                    <select id="policy" name="PolicyID" class="form-control" data-val="true" data-val-required="Please select a Policy">

                                        @{
                                            foreach (RetailPolicy _retailPolicy in ViewBag.Policies)
                                            {
                                                <option value="@_retailPolicy.ID">@_retailPolicy.Name</option>
                                            }
                                        }

                                    </select>
                                    @Html.ValidationMessageFor(model => model.PolicyID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row" style="margin-top: 20px;">

                                <label class="col-lg-3 control-label">User's Wallet Address</label>
                                <div class="col-lg-8">
                                    <input type="text" id="WalletAddress" name="WalletAddress" class="form-control" data-val="true" data-val-required="Please enter the wallet address" placeholder="Please enter the wallet address" />
                                    <span class="field-validation-valid text-danger" data-valmsg-for="WalletAddress" data-valmsg-replace="true"></span>
                                </div>
                            </div>

                            <div class="row" style="margin-top: 20px;">
                                <label class="col-lg-3 control-label">Amount</label>
                                <div class="col-lg-8">
                                    <input type="text" id="Amount" class="form-control" name="Amount" data-val="true" data-val-required="Please enter the amount" placeholder="Amount" />
                                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row" style="margin-top: 20px;">
                                <label class="col-lg-3 control-label">@Html.DisplayNameFor(model => model.Description)</label>
                                <div class="col-lg-8">
                                    @Html.TextAreaFor(model => model.Description, new { @placeholder = "Please enter the Description", @class = "form-control", @rows = "5" })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-buttons-w text-right">
                            <button class="btn btn-primary" type="submit">Send Request</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
