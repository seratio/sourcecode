@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="/wallet/assets/css/print-1.css" rel="stylesheet" />
</head>
<body>
    <table cellpadding="0" cellspacing="0" class="box">
        <tr>
            <td>
                <table cellpadding="0" cellspacing="0" class="table-1">
                    <tr>
                        <td class="text-left"><h1>Seratio Paper Wallet</h1></td>
                        <td class="text-right"><img src="/wallet/assets/images/rc.png" /></td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <p>Login Link: http://seratio-coins.world/wallet </p>
                            <p>Mnemonic: @ViewBag.words</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center" colspan="2">
                            <h4>Your Address</h4>
                            <p>@ViewBag.address</p>
                            <h4>Your Private Key</h4>
                            <p>@ViewBag.privatekey</p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h2 class="text-center">Your Address</h2>
                        </td>
                        <td>
                            <h2 class="text-center">Your Private Key</h2>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center" style="width: 50%;"><img src="data:image/jpeg;base64,@ViewBag.AddressBase" class="image-1" /></td>
                        <td class="text-center" style="width: 50%;"><img src="data:image/jpeg;base64,@ViewBag.PrivateKeyBase" class="image-1" /></td>
                    </tr>
                    <tr>
                        <td colspan="2" style="height: 40px;"></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>